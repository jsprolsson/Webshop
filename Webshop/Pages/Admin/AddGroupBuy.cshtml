@page
@model Webshop.Pages.Admin.AddGroupBuyModel
@{
}
<form method="post">
    <input type="text" asp-for="@Model.Product.id" placeholder="id" />
    <input type="text" asp-for="@Model.Product.title" placeholder="title" />
    <input type="text" asp-for="@Model.Product.price" placeholder="price" />
    <input type="text" asp-for="@Model.Product.description" placeholder="description" />
    <input type="text" asp-for="@Model.Product.category" placeholder="category" />
    <input type="text" asp-for="@Model.Product.image" placeholder="image" />
    <input type="text" asp-for="@Model.Product.chosen" placeholder="chosen" />
    <input type="text" asp-for="@Model.Product.stock" placeholder="stock" />
    <input type="text" asp-for="@Model.Product.combined" placeholder="combined" />
    <button type="submit">Submit</button>
</form>



<table class="table .table-sm">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Image</th>
            <th scope="col">Chosen</th>
            <th scope="col">Stock</th>
            <th scope="col">Combined</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model.Products)
        {
        <tr>
            <th scope="row">@product.id</th>
            <td>@product.title</td>
            <td>@product.price</td>
            <td>@product.description</td>
            <td>@product.category</td>
            <td>@product.image</td>
            <td>@product.chosen</td>
            <td>@product.stock</td>
            @if (product is Models.GroupBuy)
            {
                <td>@(((Models.GroupBuy)product).combined)</td>
            }
        </tr>
        }
    </tbody>
</table>