@page
@model Webshop.Pages.ProductsModel
@{
}

<style>
    .card {
        display: inline-block;
    }
</style>

<a asp-route-category="electronics" asp-page="/Products">Electronics</a>
<a asp-route-category="jewelery" asp-page="/Products">Jewelery</a>
<a asp-route-category="men's clothing" asp-page="/Products">Men's clothing</a>
<a asp-route-category="women's clothing" asp-page="/Products">Women's clothing</a>


<h3>@Model.SearchMessage</h3>

<div class="container">
    <div class="row">
        <div class="col">
            <h3><u>Products</u></h3>
        </div>
        <div class="col">
            <form method="post" asp-page-handler="Search">
                <label for="fritext">Search:</label>
                <input id="fritext" type="text" asp-for="@Model.SearchMessage" />
                <input type="submit" value="Input text" />
            </form>
        </div>
        <div class="col">

        </div>
    </div>
</div>


@foreach (var item in Model.Products)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@item.image" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@item.title</h5>
            <p class="card-text">@item.description</p>
            <p class="card-text text-right">Price: @item.price USD</p>
            <a href="#" class="btn btn-primary">Purchase</a>
        </div>
    </div>
}

